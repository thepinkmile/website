<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>The Pink Mile - @ViewBag.Title</title>
    <link rel="icon" type="image/vnd.microsoft.icon" href="~/favicon.ico" />
    <!--[if IE]>
    <link rel="shortcut icon" type="image/vnd.microsoft.icon" href="~/favicon.ico" />
    <![endif]-->

    <link href="~/lib/normalize-css/normalize.css" rel="stylesheet" type="text/css" />
    <environment names="Development">
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" type="text/css"/>
        <link href="~/lib/bootstrap/dist/css/bootstrap-theme.css" rel="stylesheet" type="text/css"/>
        <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" type="text/css"/>
    </environment>
    <environment names="Staging,Production">
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <link href="~/lib/bootstrap/dist/css/bootstrap-theme.min.css" rel="stylesheet" type="text/css" />
        <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    </environment>
    <link href="~/css/site.css" rel="stylesheet" type="text/css"/>
    @RenderSection("styles", false)
    
    <environment names="Development">
        <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    </environment>
    <script type="text/javascript" src="~/js/site.js"></script>
    @RenderSection("dependencies", false)
</head>
<body>
    <noscript><div class="noscript">You need JavaScript enabled to correct display page</div></noscript>
    <div>
        @RenderBody()
    </div>
    @RenderSection("scripts", false)
</body>
</html>
